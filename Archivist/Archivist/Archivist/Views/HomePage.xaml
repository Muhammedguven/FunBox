                                                        </StackLayout>
                                                        <StackLayout Orientation="Vertical"  Padding="0,0">
                                                            <StackLayout  VerticalOptions="StartAndExpand" HorizontalOptions="End" Padding="5,10">
                                                                <ImageButton CommandParameter="{Binding .}" Clicked="Series_Deleted_Clicked" BackgroundColor="Transparent" Source="delete.png" HeightRequest="20"  ></ImageButton>
                                                            </StackLayout>
                                                            <StackLayout HorizontalOptions="Center">
                                                                <Label Text="{Binding ItemID}" FontSize="0" IsVisible="False"></Label>
                                                                <Label Text="{Binding PublisherEmail}" FontSize="0" IsVisible="False"></Label>
                                                                <Label Text="{Binding Type}" FontSize="0" IsVisible="False"></Label>
                                                            </StackLayout>
                                                            <StackLayout MinimumWidthRequest="40">
                                                                <Frame CornerRadius="10" BackgroundColor="White" Padding="0,0,0,0" Margin="0,0,0,0">
                                                                    <Frame.Background>
                                                                        <LinearGradientBrush StartPoint="0,0"
                                                                        EndPoint="1,0">
                                                                            <GradientStop Color="#e8e9a1"
                                                                         Offset="1.0"/>
                                                                            <GradientStop Color="#e6b566"
                                                                         Offset="1.0"/>
                                                                        </LinearGradientBrush>
                                                                    </Frame.Background>
                                                                    <StackLayout VerticalOptions="End" HorizontalOptions="End" Orientation="Horizontal" Padding="5,0">

                                                                        <Label Text="Rate :" FontSize="17" FontAttributes="Bold" VerticalTextAlignment="Center" TextColor="#222831"></Label>
                                                                        <Label Text="{Binding Point}" TextColor="#222831" FontSize="17" FontAttributes="Bold" />

                                                                    </StackLayout>
                                                                </Frame>
                                                            </StackLayout>
                                                        </StackLayout>
                                                    </StackLayout>
                                                </Frame>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </Grid>
                        <ContentView BackgroundColor="#C0808080" x:Name="popUpImageViewSerie" IsVisible="False" Padding="10,0" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                            <StackLayout HorizontalOptions="Center" Margin="0,200,0,0">
                                <Frame CornerRadius="20" BackgroundColor="#ff7b54">
                                    <StackLayout WidthRequest="350" HeightRequest="200" Orientation="Vertical"  >
                                        <Label x:Name="PopUpTitleSerie" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="White"/>
                                        <BoxView HeightRequest="1" BackgroundColor="White"/>
                                        <Label x:Name="PopUpLabelSerie" HorizontalTextAlignment="Center" FontSize="14" TextColor="White" VerticalOptions="CenterAndExpand"/>
                                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                            <Button Text="Cancel!" x:Name="CancelSerie" TextColor="Black" Clicked="popUpButtonSerieCancel" VerticalOptions="EndAndExpand" HorizontalOptions="Center" Margin="5" CornerRadius="25" BackgroundColor="white"/>
                                            <Button Text="OK!" Clicked="popUpButtonSerie" TextColor="Black" VerticalOptions="EndAndExpand" HorizontalOptions="Center" Margin="5" CornerRadius="25" BackgroundColor="white"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </ContentView>
                    </AbsoluteLayout>
                </ContentPage>
            </ShellContent>
        </Tab>
        <Tab Icon="games.png" Title="Games" FlyoutIcon="games.png" >
            <ShellContent>
                <ContentPage>
                    <ContentPage.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                                                        EndPoint="0,1">
                            <GradientStop Color="#1f6f8b"
                                                                         Offset="0.1"/>
                            <GradientStop Color="White"
                                                                         Offset="0.6"/>
                        </LinearGradientBrush>
                    </ContentPage.Background>
