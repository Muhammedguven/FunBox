        <Tab Icon="plus.png" Title="Add an Item" FlyoutIcon="plus.png" >
            <ShellContent>
                <ContentPage>
                    <ContentPage.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                                                        EndPoint="0,1">
                            <GradientStop Color="#ffffff"
                                                                         Offset="0.1"/>
                            <GradientStop Color="#1f6f8b"
                                                                         Offset="0.5"/>
                        </LinearGradientBrush>
                    </ContentPage.Background>
                    <AbsoluteLayout Padding="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                        <ScrollView AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                            <StackLayout HorizontalOptions="Center" Spacing="20" Padding="0,20">
                                <StackLayout Orientation="Vertical" HorizontalOptions="Center" >
                                    <Frame HeightRequest="150" WidthRequest="150" CornerRadius="90" Padding="0,0,0,0" Margin="0,0,0,0">
                                        <Frame.Background>
                                            <LinearGradientBrush StartPoint="0,0"
                                                                 EndPoint="0,1">
                                                <GradientStop Color="Gray"
                                                              Offset="0.1"/>
                                                <GradientStop Color="#eeeeee"
                                                              Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Frame.Background>
                                        <ImageButton x:Name="selectedImage" Clicked="AddPhotoFromGallery" HorizontalOptions="Center" Aspect="Fill"  Source="camera.png"  BackgroundColor="Transparent"></ImageButton>
                                    </Frame>
                                </StackLayout>
                                <StackLayout >
                                    <Label x:Name="ErrorCamera" FontSize="12" HorizontalOptions="Center" Text="               " TextColor="White" FontAttributes="Bold" CharacterSpacing="3" ></Label>
                                    <BoxView HeightRequest="2" Color="white" Opacity="0.5"></BoxView>
                                </StackLayout>
                                <StackLayout  Spacing="10" Padding="0,0,10,0">
                                    <Frame WidthRequest="250" HeightRequest="40" HasShadow="True" Padding="0,0,0,0"  CornerRadius="10" HorizontalOptions="Center"  >
                                        <Frame.Background>
                                            <LinearGradientBrush StartPoint="0,0"
                                                                        EndPoint="0,1">
                                                <GradientStop Color="#eeeeee"
                                                                         Offset="0.1"/>
                                                <GradientStop Color="White"
                                                                         Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Frame.Background>
                                        <Picker  x:Name="shareTypePicker"  Title="Select Type" TitleColor="Black" TextColor="Black"  FontSize="17" HorizontalTextAlignment="Center" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="250">
                                            <Picker.Items>
                                                <x:String>Movies</x:String>
                                                <x:String>Series</x:String>
                                                <x:String>Games</x:String>
                                            </Picker.Items>
                                        </Picker>
                                    </Frame>
                                    <Frame WidthRequest="250" HeightRequest="40" HasShadow="True" Padding="0,0,0,0"  CornerRadius="10" HorizontalOptions="Center" VerticalOptions="Center" >
                                        <Frame.Background>
                                            <LinearGradientBrush StartPoint="0,0"
                                                                        EndPoint="0,1">
                                                <GradientStop Color="#eeeeee"
                                                                         Offset="0.1"/>
                                                <GradientStop Color="White"
                                                                         Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Frame.Background>
                                        <Entry x:Name="itemName" MaxLength="25" Placeholder="Name" Keyboard="Text" TextColor="Black" PlaceholderColor="Black"  FontSize="17" HorizontalTextAlignment="Center" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="250"/>
                                    </Frame>
                                    <Frame WidthRequest="250" HeightRequest="40" HasShadow="True" Padding="0,0,0,0" CornerRadius="10"  HorizontalOptions="Center" VerticalOptions="Center" >
                                        <Frame.Background>
                                            <LinearGradientBrush StartPoint="0,0"
                                                                        EndPoint="0,1">
                                                <GradientStop Color="#eeeeee"
                                                                         Offset="0.1"/>
                                                <GradientStop Color="White"
                                                                         Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Frame.Background>
                                        <DatePicker  x:Name="date" FontSize="17" TextColor="Black" HorizontalOptions="Center" />
                                    </Frame>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="8" HorizontalOptions="Center">
                                    <StackLayout>
                                        <CheckBox CheckedChanged="one_CheckedChanged"  x:Name="one" Color="#FF0000 " />
                                        <Label Text="1" TextColor="#FF0000 " FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>
                                    </StackLayout>
                                    <StackLayout>
                                        <CheckBox CheckedChanged="two_CheckedChanged" x:Name="two" Color="#FF2200" />
                                        <Label Text="2" TextColor="#FF2200" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>
                                    </StackLayout>
                                    <StackLayout>
                                        <CheckBox CheckedChanged="three_CheckedChanged"  x:Name="three"  Color="#FF4400" />
                                        <Label Text="3" TextColor="#FF4400" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>
                                    </StackLayout>
