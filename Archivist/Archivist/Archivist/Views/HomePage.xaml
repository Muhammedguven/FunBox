<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Archivist.Views.HomePage"
             xmlns:Converter="clr-namespace:Archivist.Converters"
             FlyoutBackgroundColor="#1f6f8b"
             Shell.NavBarIsVisible="False"
            Shell.TabBarBackgroundColor="#101010"
       Shell.UnselectedColor="White"
       Shell.TabBarTitleColor="#1f6f8b">


    <Shell.Resources>
        <ResourceDictionary>
            <Converter:ByteArrayToImageSourceConverter x:Key="bic"/>
        </ResourceDictionary>
    </Shell.Resources>
    <FlyoutItem FlyoutIcon="user.png" Title="Archivist"  >
        <Tab Icon="movie.png" Title="Movies" FlyoutIcon="movie.png" >
            <ContentPage >
                <ContentPage.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                                                        EndPoint="0,1">
                        <GradientStop Color="#1f6f8b"
                                                                         Offset="0.1"/>
                        <GradientStop Color="White"
                                                                         Offset="0.6"/>
                    </LinearGradientBrush>
                </ContentPage.Background>
                <AbsoluteLayout Padding="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <ActivityIndicator x:Name="Loading" Color="#db0000" IsRunning="False" AbsoluteLayout.LayoutBounds="0.5,0.5,50,50" AbsoluteLayout.LayoutFlags="PositionProportional"  ></ActivityIndicator>
                    <Grid AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <AbsoluteLayout  VerticalOptions="StartAndExpand" Padding="0,5" Grid.Row="0">
                            <Image Source="funbox.png" HeightRequest="45" WidthRequest="50"  AbsoluteLayout.LayoutBounds="10,15"></Image>
                            <ImageButton Clicked="Filter_Button_Clicked" BackgroundColor="Transparent"  Source="filter.png" HeightRequest="30" AbsoluteLayout.LayoutBounds="65,20"></ImageButton>
                            <Frame CornerRadius="45" BackgroundColor="#ffffff" HeightRequest="4" WidthRequest="230" AbsoluteLayout.LayoutBounds="100,10">
                            </Frame>
                            <StackLayout AbsoluteLayout.LayoutBounds="100,10" HorizontalOptions="Fill" WidthRequest="250">
                                <SearchBar TextChanged="Movies_SearchBar_TextChanged" x:Name="moviesSearchBar" TextColor="#db0000" HorizontalOptions="Fill" PlaceholderColor="#564d4d" Placeholder="Search movie..."  CancelButtonColor="#db0000"  FontSize="15"  VerticalOptions="End" 
                                       ></SearchBar>
                            </StackLayout>

                            <ImageButton Clicked="Logout_Clicked" BackgroundColor="Transparent"  Source="logout.png" HeightRequest="30" AbsoluteLayout.LayoutBounds="375,20"></ImageButton>
                        </AbsoluteLayout>
                        <StackLayout Grid.Row="1">
                            <ListView x:Name="MovieList" RowHeight="115" Grid.Row="1" ItemTapped="MovieList_ItemTapped"
                                      IsPullToRefreshEnabled="True" 
                                      RefreshCommand="{Binding RefreshCommand}"
                                      IsRefreshing="{Binding IsRefreshing}"
                                      Margin="5,0">
                                <ListView.Header>
                                    <Label Text="Movies" TextColor="#ef4f4f" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center"></Label>
                                </ListView.Header>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <Frame CornerRadius="15" Padding="0,0,0,0"  Margin="0,3"  >
                                                <Frame.Background>
                                                    <LinearGradientBrush StartPoint="0,0"
                                                                        EndPoint="1,0">
                                                        <GradientStop Color="#E50914"
                                                                         Offset="0.7"/>
                                                        <GradientStop Color="#af2d2d"
                                                                         Offset="1.0"/>
                                                    </LinearGradientBrush>
                                                </Frame.Background>
                                                <StackLayout Orientation="Horizontal">
                                                    <StackLayout HorizontalOptions="Start" >
                                                        <Image Source="{Binding Image,Converter={StaticResource bic}}" Aspect="AspectFill" WidthRequest="120" VerticalOptions="Center" HeightRequest="120"/>
                                                    </StackLayout>
                                                    <BoxView WidthRequest="1" BackgroundColor="#564d4d" ></BoxView>
                                                    <StackLayout Orientation="Vertical" HorizontalOptions="StartAndExpand" VerticalOptions="Start" Padding="5,10">
                                                        <Label Text="{Binding ItemName}" TextColor="#ffffff" FontSize="17" FontAttributes="Bold" VerticalOptions="Center" />
                                                        <Label Text="{Binding Date}" TextColor="#ffffff" FontSize="14" FontAttributes="Bold" VerticalOptions="Center" />
                                                        <Label Text="{Binding Description}" TextColor="#ffffff" FontSize="12" FontAttributes="Bold" VerticalOptions="End" Padding="0,0,50,0" />
                                                    </StackLayout>
                                                    <StackLayout Orientation="Vertical"  Padding="0,0">
                                                        <StackLayout  VerticalOptions="StartAndExpand" HorizontalOptions="End" Padding="5,10">
                                                            <ImageButton CommandParameter="{Binding .}" Clicked="Movies_Deleted_Clicked" BackgroundColor="Transparent" Source="delete.png" HeightRequest="20"  ></ImageButton>
                                                        </StackLayout>
                                                        <StackLayout HorizontalOptions="Center">
                                                            <Label Text="{Binding ItemID}" FontSize="0" IsVisible="False"></Label>
                                                            <Label Text="{Binding PublisherEmail}" FontSize="0" IsVisible="False"></Label>
                                                            <Label Text="{Binding Type}" FontSize="0" IsVisible="False"></Label>
                                                        </StackLayout>
                                                        <StackLayout MinimumWidthRequest="40">
                                                            <Frame CornerRadius="10" BackgroundColor="White" Padding="0,0,0,0" Margin="0,0,0,0">
                                                                <Frame.Background>
                                                                    <LinearGradientBrush StartPoint="0,0"
                                                                        EndPoint="1,0">
                                                                        <GradientStop Color="#e8e9a1"
                                                                         Offset="1.0"/>
                                                                        <GradientStop Color="#e6b566"
                                                                         Offset="1.0"/>
                                                                    </LinearGradientBrush>
                                                                </Frame.Background>
                                                                <StackLayout VerticalOptions="End" HorizontalOptions="End" Orientation="Horizontal" Padding="5,0">

                                                                    <Label Text="Rate :" FontSize="17" FontAttributes="Bold" VerticalTextAlignment="Center" TextColor="#222831"></Label>
                                                                    <Label Text="{Binding Point}" TextColor="#222831" FontSize="17" FontAttributes="Bold" />

                                                                </StackLayout>
                                                            </Frame>
                                                        </StackLayout>
                                                        
                                                    </StackLayout>
                                                </StackLayout>
                                            </Frame>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackLayout>
                    </Grid>
                    <ContentView BackgroundColor="#C0808080" x:Name="popUpImageViewMovie" IsVisible="False" Padding="10,0" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                        <StackLayout HorizontalOptions="Center" Margin="0,200,0,0">
                            <Frame CornerRadius="20" BackgroundColor="#db0000">
                                <StackLayout WidthRequest="350" HeightRequest="200" Orientation="Vertical"  >
                                    <Label x:Name="PopUpTitleMovie" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="White"/>
                                    <BoxView HeightRequest="1" BackgroundColor="White"/>
                                    <Label x:Name="PopUpLabelMovie" HorizontalTextAlignment="Center" FontSize="14" TextColor="White" VerticalOptions="CenterAndExpand"/>
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                        <Button Text="Cancel!" TextColor="Black" x:Name="CancelMovie" Clicked="popUpButtonMovieCancel" VerticalOptions="EndAndExpand" HorizontalOptions="Center" Margin="5" CornerRadius="25" BackgroundColor="white"/>
                                        <Button Text="OK!" TextColor="Black" Clicked="popUpButtonMovie" VerticalOptions="EndAndExpand" HorizontalOptions="Center" Margin="5" CornerRadius="25" BackgroundColor="white"/>
                                    </StackLayout>
                                   
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </ContentView>
                </AbsoluteLayout>
            </ContentPage>
        </Tab>
        <Tab Icon="series.png" Title="Series" FlyoutIcon="series.png" >
